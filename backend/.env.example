# Copy to .env and fill values
OPENAI_API_KEY=your-openai-key
DATABASE_URL=postgresql+asyncpg://postgres:password@db:5432/gemini
# JWT settings
SECRET_KEY=your-random-secret
ACCESS_TOKEN_EXPIRE_MINUTES=60
# Email support removed. Password resets via email are not supported in this deployment.
# If you need email support later, configure your provider and update the code.
# Frontend URL used in reset links
FRONTEND_URL=http://localhost:3000
# App environment: development or production
APP_ENV=development
# Sentry (optional)
SENTRY_DSN=
# Traefik / TLS settings for production (optional)
TRAEFIK_EMAIL=you@yourdomain.com
TRAEFIK_DOMAIN=example.com
# DO NOT COMMIT this file to source control. Use secrets manager / CI secrets for production.
